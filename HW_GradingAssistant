
def calculate_grade(average):
    """Return grade based on average marks."""
    if average >= 90:
        return "A+"
    elif average >= 80:
        return "A"
    elif average >= 70:
        return "B"
    elif average >= 60:
        return "C"
    elif average >= 50:
        return "D"
    else:
        return "F"

def grading_assistant():
    print("=== Student Grading Assistant ===")
    student_name = input("Enter student's name: ")

    subjects = int(input("Enter number of subjects: "))
    marks_dict = {}

 
    for i in range(subjects):
        subject = input(f"Enter name of subject {i+1}: ")
        marks = float(input(f"Enter marks in {subject} (out of 100): "))
        marks_dict[subject] = marks

 
    total_marks = sum(marks_dict.values())
    average_marks = total_marks / subjects
    grade = calculate_grade(average_marks)

    print("\n--- Result Summary ---")
    print(f"Student: {student_name}")
    for subject, marks in marks_dict.items():
        print(f"{subject}: {marks}")

    print(f"Total Marks: {total_marks}/{subjects * 100}")
    print(f"Average Marks: {average_marks:.2f}")
    print(f"Final Grade: {grade}")

grading_assistant()
